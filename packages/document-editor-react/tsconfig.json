{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": [
    "component",
    "./component/src/declaration.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}